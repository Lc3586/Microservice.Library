FROM mcr.microsoft.com/dotnet/core/aspnet:2.2-stretch-slim AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/core/sdk:2.2-stretch AS build
WORKDIR /src
COPY ["Test/JSC/JSC.csproj", "Test/JSC/"]
RUN dotnet restore "Test/JSC/JSC.csproj"
COPY . .
WORKDIR "/src/Test/JSC"
RUN dotnet build "JSC.csproj" -c Release -o /app

FROM build AS publish
RUN dotnet publish "JSC.csproj" -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "JSC.dll"]