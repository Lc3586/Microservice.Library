<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup Label="Globals">
    <Platforms>AnyCPU;x64</Platforms>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Library.DataMapping</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.10-alpha</Version>
    <Authors>LCTR</Authors>
    <Product>LCTR</Product>
    <Description>数据模型映射功能

参考项目 : https://github.com/Coldairarrow/Colder.Admin.AntdVue</Description>
    <PackageProjectUrl>https://github.com/Lc3586/Microservice/tree/master/src/Library/DataMapping</PackageProjectUrl>
